<UserControl x:Class="BlindConfigurationTester.ManualVisualisationWindow.OptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlindConfigurationTester.ManualVisualisationWindow"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Name="Text_OptionName">Option</TextBlock>
        <Button Grid.Column="1" Name="Button_Decrement" Click="Button_Decrement_Click">&lt;</Button>
        <TextBlock Grid.Column="2" Name="Text_Value">0</TextBlock>
        <Button Grid.Column="3" Name="Button_Increment" Click="Button_Increment_Click">&gt;</Button>
        <CheckBox Grid.Column="4" Name="CheckBox_Visualize" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"></CheckBox>
    </Grid>
</UserControl>
